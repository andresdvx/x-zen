{
  "name": "x-zen",
  "version": "1.1.12",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "git add . && git commit -m 'chore: Release new version' && git push origin andresdvx && npm run build && npm publish --access public"
  },
  "keywords": [
    "express",
    "status error",
    "http error",
    "http",
    "controller",
    "response",
    "decorator"
  ],
  "author": "Andres Dvx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-threads/x-zen.git"
  },
  "homepage": "https://github.com/x-threads/x-zen.git#readme",
  "files": [
    "dist",
    "README.md"
  ],
  "description": "x-zen is a minimalist, lightweight and modular typescript framework inspired by NestJS, designed to build scalable backend applications with decorators, dependency injection and modular architecture. ",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "reflect-metadata": "^0.2.2"
  }
}
